<%- include('header') %>

<form class="add-post-form" method="post" action="/posts">
  <div class="form-group">
    <label for="postTitle">标题：</label>
    <input type="text" name="title" class="form-control" id="postTitle"/>
  </div>
  <div class="form-group">
    <label for="postTextArea">内容：</label>
    <textarea class="form-control" name="content" id="postTextArea" rows="6"></textarea>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-success btn-block">发布</button>
  </div>
</form>

<%- include('footer') %>